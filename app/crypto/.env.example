# Crypto Dashboard Environment Variables

# Optional: CoinGecko API Key (for higher rate limits)
# NEXT_PUBLIC_COINGECKO_API_KEY=your_api_key_here

# Cache Durations (in milliseconds)
CACHE_DURATION_COINS=30000
CACHE_DURATION_HISTORY=300000
CACHE_DURATION_SEARCH=3600000

# Auto-refresh interval (in milliseconds)
AUTO_REFRESH_INTERVAL=30000

# Display Settings
NEXT_PUBLIC_DEFAULT_CURRENCY=usd
NEXT_PUBLIC_DEFAULT_PER_PAGE=100
NEXT_PUBLIC_DEFAULT_TIME_PERIOD=7

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_FAVORITES=true
NEXT_PUBLIC_ENABLE_COMPARISON=true
